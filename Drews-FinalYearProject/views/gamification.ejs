<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body>
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-4">
      <h1>Gamification</h1>
      <div class="my-4">
        <h2>Points: <%= points %></h2>
        <h3>Achievements</h3>
        <ul>
          <% achievements.forEach(function(achievement) { %>
            <li><%= achievement %></li>
          <% }); %>
        </ul>
      </div>
      <div class="my-4">
        <h3>Leaderboard</h3>
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">Username</th>
              <th scope="col">Points</th>
            </tr>
          </thead>
          <tbody>
            <% leaderboard.forEach(function(user, index) { %>
              <tr>
                <th scope="row"><%= index + 1 %></th>
                <td><%= user.username %></td>
                <td><%= user.points %></td>
              </tr>
            <% }); %>
          </tbody>
        </table>
      </div>
    </main>
  </body>
<%- include('partials/_footer.ejs') %>
</html>