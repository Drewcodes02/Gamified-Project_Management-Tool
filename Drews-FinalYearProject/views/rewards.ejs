<!DOCTYPE html>
<html lang="en">
<%- include('partials/_head.ejs') %>
  <body style="background-color: #3498db; color: #fff;">
<%- include('partials/_header.ejs') %>
    <main role="main" class="container mt-5">
      <h2 class="text-center mb-4">Rewards</h2>
      <div class="row">
        <% rewards.forEach(function(reward) { %>
          <div class="col-md-4">
            <div class="card mb-4 shadow" style="background-color: #fff; color: #000;">
              <div class="card-body">
                <h5 class="card-title"><%= reward.rewardName %></h5>
                <p class="card-text"><%= reward.description %></p>
                <div class="d-flex justify-content-between align-items-center">
                  <small class="text-muted">Cost: <%= reward.pointCost %> points</small>
                  <form action="/rewards/redeem" method="post">
                    <input type="hidden" name="rewardId" value="<%= reward._id %>">
                    <!-- No need for user ID input as it will be retrieved from session on the server side -->
                    <button type="submit" class="btn btn-sm btn-primary">Redeem</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        <% }); %>
      </div>
    </main>
<%- include('partials/_footer.ejs') %>
  </body>
</html>
