<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Analytics | Gamified Project Management Tool</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <!-- Chart.js CDN for rendering charts -->
    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    
</head>
<body>
    <%- include('partials/navbar') %>
    <div class="container">
        <h1>Task Analytics</h1>
        <div>
            <% analytics.forEach(function(analytic) { %>
                <div>
                    <h3>Status: <%= analytic._id %></h3>
                    <p>Total Time Spent: <%= analytic.totalTimeSpent %> hours</p>
                    <p>Average Time Spent: <%= analytic.averageTimeSpent %> hours</p>
                    <p>Task Count: <%= analytic.count %></p>
                </div>
            <% }); %>
        </div>
        <div>
            <canvas id="timeSpentChart"></canvas>
            <canvas id="taskCountChart"></canvas>
        </div>
    </div>
    <script id="analytics-data" type="application/json">
        <%- JSON.stringify(analytics) %>
    </script>
    <script>
        document.addEventListener('DOMContentLoaded', function() {
            const analyticsDataElement = document.getElementById('analytics-data');
            const analytics = JSON.parse(analyticsDataElement.textContent || analyticsDataElement.innerText);
            const ctxTimeSpent = document.getElementById('timeSpentChart').getContext('2d');
            const ctxTaskCount = document.getElementById('taskCountChart').getContext('2d');

            const timeSpentData = analytics.map(analytic => analytic.totalTimeSpent);
            const taskCountData = analytics.map(analytic => analytic.count);
            const labels = analytics.map(analytic => analytic._id);

            new Chart(ctxTimeSpent, {
                type: 'bar',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Total Time Spent (hours)',
                        data: timeSpentData,
                        backgroundColor: 'rgba(54, 162, 235, 0.2)',
                        borderColor: 'rgba(54, 162, 235, 1)',
                        borderWidth: 1
                    }]
                },
                options: {
                    scales: {
                        y: {
                            beginAtZero: true
                        }
                    }
                }
            });

            new Chart(ctxTaskCount, {
                type: 'pie',
                data: {
                    labels: labels,
                    datasets: [{
                        label: 'Task Count',
                        data: taskCountData,
                        backgroundColor: [
                            'rgba(255, 99, 132, 0.2)',
                            'rgba(54, 162, 235, 0.2)',
                            'rgba(255, 206, 86, 0.2)'
                        ],
                        borderColor: [
                            'rgba(255, 99, 132, 1)',
                            'rgba(54, 162, 235, 1)',
                            'rgba(255, 206, 86, 1)'
                        ],
                        borderWidth: 1
                    }]
                }
            });
        });
    </script>
</body>
</html>